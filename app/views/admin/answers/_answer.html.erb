<li> 
  <%= answer.body %> 
  <%= "Correct" if answer.correct? %> 
</li>

<span> <%= link_to t("edit"), edit_admin_answer_path(answer),
                   class: "btn btn-outline-primary text-dark text-decoration-none" %>
</span>  

<span> <%= link_to t("delete"), admin_answer_path(answer),
                   class: "btn btn-outline-primary text-dark text-decoration-none",
                   method: :delete, data: { confirm: t("confirmation") } %> 
</span>
