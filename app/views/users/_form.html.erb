<%= form_with model: @user, local: true do |form| %>
  
  <%= render "/shared/errors", resource: @user %> 
  
  <p>
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </p>

  <p>
    <%= form.label :surname %>
    <%= form.text_field :surname, id: :user_surname %>
  </p>

  <p>
    <%= form.label :dob %>
    <%= date_select :user, :dob, start_year: 1930 %>
  </p>
  
  <p>
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </p>

  <p>
    <%= form.label :role %>
    <%= form.text_field :role, id: :user_role %>
  </p>

  <p><%= form.submit %></p>

<% end %>
